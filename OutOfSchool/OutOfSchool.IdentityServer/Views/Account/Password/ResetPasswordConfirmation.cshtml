@using Microsoft.AspNetCore.Mvc.Localization
@using OutOfSchool.IdentityServer

@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model String;

@{
    ViewData["Title"] =  SharedLocalizer["Reset password confirmation"];
    Layout = "_Layout";
}
<div class="wrapper_body">
    <div class="wrapper">
        <h2 class="title">@SharedLocalizer["Reset password"]</h2>

        <h3 class="instruction">@SharedLocalizer["Your password has been reset"]</h3>
        <a class="link" href="@Model">@SharedLocalizer["Sign In"]</a>
    </div>
</div>