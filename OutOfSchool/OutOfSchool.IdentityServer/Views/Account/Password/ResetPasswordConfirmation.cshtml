@using Microsoft.AspNetCore.Mvc.Localization
@using OutOfSchool.IdentityServer

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] =  SharedLocalizer["Reset password confirmation"];
    Layout = "_Layout";
}

<div class="wrapper modal">
    <h1 class="icon_title">@SharedLocalizer["Reset password"]</h1>

    <h3 class="instruction">@SharedLocalizer["Your password has been reset"]</h3>
    <div class="registration_link"><a href="Login" class="link">@SharedLocalizer["Sign In"]</a></div>

</div>
