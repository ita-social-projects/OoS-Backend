@using Microsoft.AspNetCore.Mvc.Localization
@using OutOfSchool.IdentityServer

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Confirm email change"];
    Layout = "_Layout";
}
<div class="wrapper_body">
    <div class="wrapper">
        <h2 class="title">@SharedLocalizer["Change email"]</h2>
        <h3 class="instruction">@SharedLocalizer[@"Change email done"]</h3>
    </div>
</div>