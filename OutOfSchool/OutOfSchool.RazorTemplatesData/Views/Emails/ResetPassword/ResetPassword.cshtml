@using OutOfSchool.RazorTemplatesData.Models.Emails
@using OutOfSchool.RazorTemplatesData.Models.Shared
@model UserActionViewModel

@{
    ViewData["EmailTitle"] = "";
}

<main class="container">
    <div class="content">
        <h1 class="title">@Model.FirstName @Model.LastName, ми отримали ваш запит на зміну паролю.</h1>
        <p class="text">Щоб змінити пароль перейдіть за посиланням.</p>
        @await Html.PartialAsync("EmailButton", new EmailButtonViewModel("Confirm Email", Model.ActionUrl))
    </div>
</main>