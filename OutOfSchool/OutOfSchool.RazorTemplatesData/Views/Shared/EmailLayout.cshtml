@using Microsoft.Extensions.Configuration
@using System.Reflection;
@inject IConfiguration configuration

@{
    var host = configuration.GetSection("Identity")["Authority"];
    var appName = Assembly.GetExecutingAssembly().GetName().Name;
    var pathToContent = string.Concat(host, "/_content/email", appName);
}  

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewData["Title"]</title>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
        <style type = "text/css">
        
              html, body {
                  height: 100%;
              }
              body {
                  margin: 0;
                  font-family: "Open Sans", sans-serif;
                  font-size: 0.8125rem;
                  line-height: 1.125rem;
                  background-color: #F8F8F8;
                  color: #333333;
              }
              
              @@font-face {
                          font-family: "Innerspace";
                          src:
                              local("Innerspace"),
                              url(@pathToContent/fonts/Innerspace-normal.ttf) format("truetype"),
                              url(@pathToContent/fonts/Innerspace-bold.ttf) format("truetype");
                          }
              
              h1, h2, h3, h4, h5, h6 {
                  font-family: "Innerspace";
                  color: #000000;
                  margin: 0;
              }
              h1 {
                  font-size: 2.25rem;
                  line-height: 2.5rem;
              }
              h2 {
                  font-size: 1.5rem;
                  line-height: 1.6875rem;
              }
              h3 {
                  font-size: 1.125rem;
                  line-height: 1.25rem;
              }
              h4 {
                  font-size: 1rem;
                  line-height: 1.125rem;
              }
              h5 {
                  font-size: 0.8125rem;
                  line-height: 0.9375rem;
              }
              h6 {
                  font-size: 0.6875rem;
                  line-height: 0.9375rem;
              }
            
              a {
                  text-decoration: none;
                  color: inherit;
              }
              .header__logo {
                  width: 100%;
              }
              .container {
                  margin: 0 auto;
                  max-width: 400px;
                  display: flex;
                  flex-direction: column;
                  justify-content: center;
                  text-align: center;
              }
              .content {
                  text-align: center;
              }
              .company-logo {
                  float: right;
              }
              .title {
                  margin-top: 36px;
                  font-family: 'Innerspace', sans-serif;
                  font-style: normal;
                  font-weight: 700;
                  font-size: 18px;
                  line-height: 20px;
              }
              .text {
                  font-weight: 400;
                  font-size: 13px;
                  line-height: 18px;
                  color: #333333;
              }
              .password {
                  padding: 24px 112px;
                  background-color: hsla(235, 94%, 60%, 0.1);
                  border-radius: 5px;
                  color: #3849F9;
                  font-family: 'Innerspace', sans-serif;
                  letter-spacing: 7px;
                  font-weight: 700;
                  font-size: 18px;
                  line-height: 20px;
              }
              .footer {
                  background-color: #EBEBEB;
                  padding: 16px 34px;
                  bottom: 0;
                  justify-content: space-between;
                  margin-bottom: -20px;
              }
              .min-logo {
                  height: 18px;
                  margin-right: 20px;
              }
              .wrapper {
                  min-height: 100%;
                  display: flex;
                  flex-direction: column;
              }
              main {
                  flex: 1 1 auto;
              }
        </style>
    </head>

    <body>
        <header class="header">
            <img class="header__logo" src= "@pathToContent/images/Header.png" alt="header">
        </header>
        <div>
            @RenderBody()
        </div>
        <footer>
            <div class="footer">
                <div>
                    <a target="_blank" rel="noopener" href="https://mon.gov.ua/">
                        <img class="min-logo" src="@pathToContent/images/MES.png" alt="Ministry of Education and Science of Ukraine">
                    </a>
                    <a target="_blank" rel="noopener" href="https://mkip.gov.ua/">
                        <img class="min-logo" src="@pathToContent/images/MinCultInfoPolicy.png" alt="Ministry of Culture and Information Policy of Ukraine">
                    </a>
                    <a target="_blank" rel="noopener" href="https://mms.gov.ua/">
                        <img class="min-logo" src="@pathToContent/images/MinMolodSport.png" alt="Ministry of Youth and Sports of Ukraine">
                    </a>
                    <a target="_blank" rel="noopener" href="https://www.softserveinc.com/uk-ua/">
                        <img class="company-logo" src="@pathToContent/images/SoftServeLogo.png" alt="SoftServe">
                    </a>
                </div>
            </div>
        </footer>
    </body>
</html>