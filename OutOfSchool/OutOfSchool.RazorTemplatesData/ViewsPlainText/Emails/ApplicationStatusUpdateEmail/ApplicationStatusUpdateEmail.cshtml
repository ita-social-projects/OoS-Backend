@using OutOfSchool.RazorTemplatesData.Models.Emails
@using OutOfSchool.Services.Enums
@model ApplicationStatusViewModel

@{
    ViewData["EmailTitle"] = "";
    var ending = "";

    if (Model.ChildGender == Gender.Male)
    {
        ending = "ий";
    }
    else if (Model.ChildGender == Gender.Female)
    {
        ending = "а";
    }
    else if (Model.ChildGender == null)
    {
        ending = "ий/a";
    }
}

@if (Model.ApplicationStatus == ApplicationStatus.Approved)
{
    @:Зараховано!
    @:Вітаємо!
    @Model.ChildFullName
    @:зарахован@(ending) до
    @Model.WorkshopTitle
}
else if (Model.ApplicationStatus == ApplicationStatus.Rejected)
{
    @:Відмовлено
    @:На жаль,
    @Model.ChildFullName
    @:не може бути зарахован@(ending) до
    @Model.WorkshopTitle
    @:Причина:"@Model.RejectionMessage"
}
else if (Model.ApplicationStatus == ApplicationStatus.AcceptedForSelection)
{
    @:Вітаємо!
    @Model.ChildFullName
    @:Прийнят@(ending) до конкурсного відбору до
    @Model.WorkshopTitle
}
else
{
    @:Вітаємо!
    @:Статус Вашої заявки змінився на:
    @Model.ApplicationStatus
}