@using OutOfSchool.RazorTemplatesData.Models.Emails
@using OutOfSchool.Services.Enums
@model ApplicationStatusViewModel

@if (Model.ApplicationStatus == ApplicationStatus.Approved)
{
    @:Зараховано!
    @:Вітаємо!
    @Model.ChildFullName
    @:зарахован@(Model.UaEnding) до
    @Model.WorkshopTitle
}
else if (Model.ApplicationStatus == ApplicationStatus.Rejected)
{
    @:Відмовлено
    @:На жаль,
    @Model.ChildFullName
    @:не може бути зарахован@(Model.UaEnding) до
    @Model.WorkshopTitle
    @:Причина:"@Model.RejectionMessage"
}
else if (Model.ApplicationStatus == ApplicationStatus.AcceptedForSelection)
{
    @:Вітаємо!
    @Model.ChildFullName
    @:Прийнят@(Model.UaEnding) до конкурсного відбору до
    @Model.WorkshopTitle
}
else
{
    @:Вітаємо!
    @:Статус Вашої заявки змінився на:
    @Model.ApplicationStatus
}