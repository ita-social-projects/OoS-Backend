{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;user=root;password=rootPassword;database=out_of_school;guidformat=binary16",
    "ExternalImageStorage": {
      "ServerName": "mongodb://localhost:27017",
      "DatabaseName": "Images"
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Loggs/log.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "fileSizeLimitBytes": null
        }
      }
    ]
  },
  "Elasticsearch": {
    "EnsureIndex": false,
    "DefaultIndex": "workshop",
    "Urls": [
      "http://localhost:9200/"
    ],
    "User": "admin",
    "Password": "admin"
  },
  "CommonImagesRequestLimits": {
    "MaxCountOfAttachedFiles": 30
  },
  "Images": {
    "Workshop": {
      "MinWidthPixels": 350,
      "MaxWidthPixels": 10000,
      "MinHeightPixels": 250,
      "MaxHeightPixels": 8000,
      "MaxSizeBytes": 16777216,
      "MaxWidthHeightRatio": 2, 
      "SupportedFormats": [
        "jpeg",
        "png"
      ]
    }
  }

}