{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;user=root;password=rootPassword;database=out_of_school;guidformat=binary16",
    "ExternalImageStorage": {
      "Server": "mongodb://localhost:27017",
      "Database": "Images"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "FilePath": "Loggs\\log.log"
  },

  "Elasticsearch": {
    "EnsureIndex": false,
    "DefaultIndex": "workshop",
    "Urls": [
      "http://localhost:9200/"
    ],
    "User": "admin",
    "Password": "admin"
  },
  "RequestLimits": {
    "MaxCountOfAttachedFiles": 30  
  },
  "Images": {
    "Workshop": {
      "MinWidthPixels": 350,
      "MaxWidthPixels": 10000,
      "MinHeightPixels": 250,
      "MaxHeightPixels": 8000,
      "MaxSizeBytes": 16777216,
      "MaxWidthHeightRatio": 2, 
      "SupportedFormats": [
        "jpeg",
        "png"
      ]
    }
  }

}