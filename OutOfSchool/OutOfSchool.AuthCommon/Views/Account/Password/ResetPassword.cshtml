@using Microsoft.AspNetCore.Mvc.Localization
@using OutOfSchool.AuthCommon

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model OutOfSchool.AuthCommon.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] =  SharedLocalizer["Reset password"];
    Layout = "_Layout";
}

<div class="wrapper_body">
    <div class="wrapper">
        <h2 class="title">@SharedLocalizer["Reset password"].Value.ToUpper()</h2>

        <div class="warning">
            <img src="~/_content/auth/icons/warning.svg" alt="warning" class="warning_icon" ><p>@SharedLocalizer["Change password alert"]</p>
        </div>
        <form method="post" class="wrapper">
            <input type="hidden" asp-for="Token" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="registration_item registration_item-password">
                <div>
                    <label class="registration_label">@SharedLocalizer["Email"]</label>
                    <input class="registration_input" asp-for="Email" autocomplete="username" aria-required="true" disabled />
                </div>
                <div>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            
            <div class="registration_item registration_item-password">
                <div>
                    <label class="registration_label" asp-for="Password">@SharedLocalizer["Password"]</label>
                    <input class="registration_input registration_input-password registration_input_required"
                           type="Password" asp-for="Password" autocomplete="new-password" aria-required="true" id="password" />
                    <div class="registration_privacy_password">
                        <img src="~/_content/auth/icons/ic_eye.svg" alt="eye" class="registration_eye" id="password_eye">
                    </div>
                </div>
                <div>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            
            <div class="registration_item registration_item-password">
                <div>
                    <label class="registration_label" asp-for="ConfirmPassword">@SharedLocalizer["Confirm password"]</label>
                    <input class="registration_input registration_input-password registration_input_required"
                           type="Password" asp-for="ConfirmPassword" autocomplete="new-password" aria-required="true" id="repeat_password" />
                    <div class="registration_privacy_confirm_password">
                        <img src="~/_content/auth/icons/ic_eye.svg" alt="eye" class="registration_eye" id="confirm_password_eye">
                    </div>
                </div>
                <div>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            
            <div>
                <div class="registration_item">
                    <input type="submit" value="@SharedLocalizer["Save"]" class="registration_submit registration_button" />
                </div>
            </div>
        </form>
    </div>
</div>
@await Html.PartialAsync("_JqueryPartial")
<script src="~/_content/auth/js/site.js" type="text/javascript" asp-append-version="true"></script>
